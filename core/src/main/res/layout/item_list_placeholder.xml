<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="18dp"
    app:cardElevation="18dp"
    app:cardCornerRadius="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/game_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="#DDDDDD"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_description"
            app:layout_constraintDimensionRatio="H,1.35:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/bg_transparent"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#7F000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_gamename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/text_primary"
            android:background="#DDDDDD"
            android:text="@string/text_primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#00000000"
            app:layout_constraintStart_toStartOf="@id/bg_transparent"
            app:layout_constraintEnd_toEndOf="@id/bg_transparent"
            app:layout_constraintTop_toTopOf="@id/bg_transparent"
            app:layout_constraintBottom_toBottomOf="@id/bg_transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>